{
  "agent": {
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/opt/nextcloud/data/nextcloud.log",
            "log_group_name": "nextcloud.log",
            "log_stream_name": "{local_hostname}"
          }
        ]
      }
    }
  },
  "metrics": {
    "metrics_collected": {
      "statsd": {
        "metrics_aggregation_interval": 60,
        "metrics_collection_interval": 60,
        "service_address": ":8125"
      },
      "disk": {
        "measurement":[
                 "used_percent"
        ],
        "metrics_collection_interval": 60,
        "resources":[
                  "*"
        ]
      },
      "mem": {
          "measurement": [
                     "mem_used_percent"
          ],
          "metrics_collection_interval": 60
      }
    }
  }
}
